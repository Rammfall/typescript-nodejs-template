{
  "name": "typescript-nodejs-template",
  "version": "0.1.0",
  "description": "Template for nodejs application with typescript",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint \"src/**/*.ts\" --max-warnings 0",
    "build": "rimraf dist && tsc -p tsconfig.production.json",
    "dev": "nodemon",
    "start": "node dist/src/index.js",
    "windows:db:migrate": "ts-node node_modules\\typeorm\\cli.js migration:run",
    "windows:db:revert": "ts-node node_modules\\typeorm\\cli.js migration:revert",
    "windows:db:reboot": "npm run windows:db:revert && npm run windows:db:migrate",
    "db:migrate": "ts-node ./node_modules/.bin/typeorm migration:run",
    "db:revert": "ts-node ./node_modules/.bin/typeorm migration:revert",
    "db:reboot": "npm run db:revert && npm run db:migrate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rammfall/typescript-nodejs-template.git"
  },
  "keywords": [
    "nodejs",
    "template",
    "typescript",
    "docker"
  ],
  "author": "rammfall",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Rammfall/typescript-nodejs-template/issues"
  },
  "homepage": "https://github.com/Rammfall/typescript-nodejs-template#readme",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/faker": "^4.1.12",
    "@types/helmet": "0.0.48",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.6.2",
    "@types/redis": "^2.8.27",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.0",
    "@types/yup": "^0.29.6",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "faker": "^5.1.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.13",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "otplib": "^12.0.1",
    "pg": "^8.3.3",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.25",
    "uuid": "^8.3.0",
    "validator": "^13.1.1",
    "yup": "^0.29.3"
  },
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix --max-warnings 0",
      "jest --findRelatedTests"
    ],
    "*.js": [
      "prettier --write",
      "eslint --fix --max-warnings 0",
      "jest --findRelatedTests"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules",
      ".git",
      "*.test.*",
      "test"
    ],
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/index.ts"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintIgnore": [
    "src/db/migration"
  ]
}
